{
    "name": "learning_chat_reply",
    "schema": {
        "type": "object",
        "properties": {
            "tokens": {
                "type": "array",
                "description": "Assistant reply split by word boundaries with translation and pinyin for each token.",
                "items": {
                    "type": "object",
                    "properties": {
                        "word": {
                            "type": "string",
                            "description": "The exact Chinese word or token to display, in order."
                        },
                        "pinyin": {
                            "type": "string",
                            "description": "Pinyin for the token."
                        },
                        "translation": {
                            "type": "string",
                            "description": "A concise English translation for the token."
                        }
                    },
                    "required": [
                        "word",
                        "pinyin",
                        "translation"
                    ],
                    "additionalProperties": false
                }
            },
            "suggested_followup_question": {
                "type": "string",
                "description": "A short follow-up question in Chinese appropriate for the user level to keep the conversation going."
            }
        },
        "required": [
            "tokens",
            "suggested_followup_question"
        ],
        "additionalProperties": false
    },
    "strict": true
}