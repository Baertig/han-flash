{
    "name": "learning_chat_grading",
    "schema": {
        "type": "object",
        "properties": {
            "naturalness": {
                "type": "integer",
                "minimum": 1,
                "maximum": 5,
                "description": "Score 1-5 for how natural the sentence sounds."
            },
            "grammar": {
                "type": "integer",
                "minimum": 1,
                "maximum": 5,
                "description": "Score 1-5 for grammar correctness."
            },
            "complexity": {
                "type": "integer",
                "minimum": 1,
                "maximum": 5,
                "description": "Score 1-5 for lexical and structural complexity relative to user level."
            },
            "explanations": {
                "type": "object",
                "properties": {
                    "naturalness": {
                        "type": "string",
                        "description": "Why this score and how to sound more natural."
                    },
                    "grammar": {
                        "type": "string",
                        "description": "Why this score and how to fix grammar issues."
                    },
                    "complexity": {
                        "type": "string",
                        "description": "Why this score and how to adjust complexity."
                    }
                },
                "required": [
                    "naturalness",
                    "grammar",
                    "complexity"
                ],
                "additionalProperties": false
            },
            "suggested_improved_sentence": {
                "type": "string",
                "description": "A version of the sentence that improves on the user's attempt, at the same level."
            }
        },
        "required": [
            "naturalness",
            "grammar",
            "complexity",
            "explanations",
            "suggested_improved_sentence"
        ],
        "additionalProperties": false
    },
    "strict": true
}