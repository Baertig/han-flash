{
    "name": "text_tokenization",
    "schema": {
        "type": "object",
        "properties": {
            "tokens": {
                "type": "array",
                "description": "Text split by word boundaries with translation and pinyin for each word.",
                "items": {
                    "type": "object",
                    "properties": {
                        "word": {
                            "type": "string",
                            "description": "The exact Chinese word or to display, in order."
                        },
                        "pinyin": {
                            "type": "string",
                            "description": "Pinyin for the word."
                        },
                        "translation": {
                            "type": "string",
                            "description": "English translation for the word."
                        }
                    },
                    "required": [
                        "word",
                        "pinyin",
                        "translation"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "required": [
            "tokens"
        ],
        "additionalProperties": false
    },
    "strict": true
}